    <section class="menu">
      <h3>Menu Favorit</h3>
      <div class="menu-grid">
        <% const menu = [
          { name: "Chicken Katsu", price: 15000, img: "katsu.jpg" },
          { name: "Nasi Goreng", price: 12000, img: "nasigoreng.jpg" },
          { name: "Bakso", price: 15000, img: "bakso.jpg" },
          { name: "Batagor", price: 8000, img: "batagor.jpg" }
        ]; %>

        <% menu.forEach(item => { %>
          <div class="menu-item">
            <img src="/images/<%= item.img %>" alt="<%= item.name %>">
            <p><%= item.name %><br>Rp. <%= item.price.toLocaleString() %></p>
            <div class="buttons">
              <button class="btn-detail">Detail</button>
              <button class="btn-order">Pesan</button>
            </div>
          </div>
        <% }); %>
      </div>
    </section>
  </main>

  <footer class="footer"></footer>
</body>
