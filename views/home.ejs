        <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-4">
          <!-- Menu Item -->
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <img src="/images/katsu.jpg" alt="Chicken Katsu" class="w-full h-40 object-cover">
            <div class="p-4">
              <p class="font-semibold text-lg">Chicken Katsu</p>
              <p class="text-gray-500">Rp. 15.000</p>
              <div class="flex space-x-2 mt-2">
                <button class="px-4 py-2 bg-gray-300 rounded-md hover:bg-gray-400">Detail</button>
                <button class="px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700">Pesan</button>
              </div>
            </div>
          </div>

          <!-- Menu Item -->
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <img src="/images/nasgor.jpeg" alt="Nasi Goreng" class="w-full h-40 object-cover">
            <div class="p-4">
              <p class="font-semibold text-lg">Nasi Goreng</p>
              <p class="text-gray-500">Rp. 12.000</p>
              <div class="flex space-x-2 mt-2">
                <button class="px-4 py-2 bg-gray-300 rounded-md hover:bg-gray-400">Detail</button>
                <button class="px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700">Pesan</button>
              </div>
            </div>
          </div>

          <!-- Menu Item -->
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <img src="/images/bakso.jpeg" alt="Bakso" class="w-full h-40 object-cover">
            <div class="p-4">
              <p class="font-semibold text-lg">Bakso</p>
              <p class="text-gray-500">Rp. 15.000</p>
              <div class="flex space-x-2 mt-2">
                <button class="px-4 py-2 bg-gray-300 rounded-md hover:bg-gray-400">Detail</button>
                <button class="px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700">Pesan</button>
              </div>
            </div>
          </div>

          <!-- Menu Item -->
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <img src="/images/batagor.jpg" alt="Batagor" class="w-full h-40 object-cover">
            <div class="p-4">
              <p class="font-semibold text-lg">Batagor</p>
              <p class="text-gray-500">Rp. 8.000</p>
              <div class="flex space-x-2 mt-2">
                <button class="px-4 py-2 bg-gray-300 rounded-md hover:bg-gray-400">Detail</button>
                <button class="px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700">Pesan</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </main>

  <!-- Footer -->
  <footer class="bg-green-600 text-white p-4 mt-8 text-center">
