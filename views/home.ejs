<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Home - SIRASO BC</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    /* Flexbox untuk memastikan footer selalu di bawah */
    body {
      display: flex;
      flex-direction: column;
      min-height: 100vh; /* Membuat body setinggi 100vh */
    }

    main {
      flex: 1; /* Mengambil sisa ruang setelah header */
    }
  </style>
</head>
<body class="bg-white font-sans text-gray-900">

  <main>
    <!-- Header -->
    <%- include('partials/header') %> <!-- Menggunakan partial header.ejs -->

    <!-- Advertisement -->
    <div class="flex justify-between items-center ">
      <div class="flex-1 text-center">
        <img src="/images/bc.jpg" alt="Advertisement" class="w-full h-40 object-cover">
      </div>
    </div>

    <!-- Main Section -->
    <div class="flex mt-8">
      <!-- Sidebar -->
      <%- include('partials/sidebar') %> <!-- Menggunakan partial sidebar.ejs -->

      <!-- Menu Section -->
      <div class="w-3/4 p-4">
        <h3 class="text-2xl font-semibold mb-6 text-green-700">Menu Favorit</h3>
        <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-4">
          <!-- Menu Item -->
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <img src="/images/katsu.jpg" alt="Chicken Katsu" class="w-full h-40 object-cover">
            <div class="p-4">
              <p class="font-semibold text-lg">Chicken Katsu</p>
              <p class="text-gray-500">Rp. 15.000</p>
              <div class="flex space-x-2 mt-2">
                <button class="px-4 py-2 bg-gray-300 rounded-md hover:bg-gray-400">Detail</button>
                <button class="px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700">Pesan</button>
              </div>
            </div>
          </div>

          <!-- Menu Item -->
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <img src="/images/nasgor.jpeg" alt="Nasi Goreng" class="w-full h-40 object-cover">
            <div class="p-4">
              <p class="font-semibold text-lg">Nasi Goreng</p>
              <p class="text-gray-500">Rp. 12.000</p>
              <div class="flex space-x-2 mt-2">
                <button class="px-4 py-2 bg-gray-300 rounded-md hover:bg-gray-400">Detail</button>
                <button class="px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700">Pesan</button>
              </div>
            </div>
          </div>

          <!-- Menu Item -->
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <img src="/images/bakso.jpeg" alt="Bakso" class="w-full h-40 object-cover">
            <div class="p-4">
              <p class="font-semibold text-lg">Bakso</p>
              <p class="text-gray-500">Rp. 15.000</p>
              <div class="flex space-x-2 mt-2">
                <button class="px-4 py-2 bg-gray-300 rounded-md hover:bg-gray-400">Detail</button>
                <button class="px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700">Pesan</button>
              </div>
            </div>
          </div>

          <!-- Menu Item -->
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <img src="/images/batagor.jpg" alt="Batagor" class="w-full h-40 object-cover">
            <div class="p-4">
              <p class="font-semibold text-lg">Batagor</p>
              <p class="text-gray-500">Rp. 8.000</p>
              <div class="flex space-x-2 mt-2">
                <button class="px-4 py-2 bg-gray-300 rounded-md hover:bg-gray-400">Detail</button>
                <button class="px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700">Pesan</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </main>

  <!-- Footer -->
  <%- include('partials/footer') %> <!-- Menggunakan partial footer.ejs -->

</body>
</html>
