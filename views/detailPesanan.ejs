<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Detail Pesanan</title>

  <!-- Tailwind CSS CDN (atau ganti ke build lokal) -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 font-sans">

  < <!-- Header -->
    <%- include('partials/header') %> <!-- Menggunakan partial header.ejs -->

  <!-- ====== Card ====== -->
  <main class="max-w-4xl mx-auto mt-10 bg-white p-8 rounded shadow">

    <!-- ---------- Informasi Transaksi ---------- -->
    <section class="mb-6">
      <h2 class="text-lg font-semibold text-green-700 mb-2">Informasi Transaksi</h2>
      <ul class="text-sm leading-relaxed">
        <li><strong>No. Transaksi:</strong> TRX<%= transaksi.transaction_id.toString().padStart(3, '0') %></li>
        <li><strong>Nama:</strong> <%= transaksi.user.fullname %></li>
        <li><strong>Tanggal:</strong> <%= transaksi.tanggal_transaksi.toLocaleString('id-ID') %></li>
        <li><strong>Status:</strong> <span class="text-green-600 font-medium">Pembayaran berhasil</span></li>
        <li><strong>Metode Pembayaran:</strong> <%= transaksi.metode_pembayaran %></li>
      </ul>
    </section>

    <!-- ---------- Detail Pesanan ---------- -->
    <section>
      <h2 class="text-lg font-semibold text-green-700 mb-2">Detail Pesanan</h2>

      <table class="w-full border text-sm">
        <thead class="bg-green-700 text-white">
          <tr>
            <th class="p-2 text-left">Nama Menu</th>
            <th class="p-2 text-center">Jumlah</th>
            <th class="p-2 text-right">Subtotal</th>
          </tr>
        </thead>
        <tbody>
          <% items.forEach(item => { %>
            <tr class="border-b">
              <td class="p-2"><%= item.menu.nama_makanan %></td>
              <td class="p-2 text-center"><%= item.jumlah %></td>
              <td class="p-2 text-right">
                Rp <%= (parseFloat(item.menu.harga) * item.jumlah).toLocaleString('id-ID') %>
              </td>
            </tr>
          <% }) %>

          <!-- Baris Biaya Layanan -->
          <tr class="border-t bg-gray-50">
            <td class="p-2 font-medium">Biaya Layanan</td>
            <td class="p-2 text-center"></td>
            <td class="p-2 text-right">
              Rp <%= biayaLayanan.toLocaleString('id-ID') %>
            </td>
          </tr>

          <!-- Baris Total Bayar -->
          <tr class="border-t bg-green-50">
            <td class="p-2 font-bold text-green-700">Total Bayar</td>
            <td class="p-2 text-center font-bold text-green-700"></td>
            <td class="p-2 text-right font-bold text-green-700">
              Rp <%= totalBayar.toLocaleString('id-ID') %>
            </td>
          </tr>
        </tbody>
      </table>
    </section>

    <!-- ---------- Tombol Aksi ---------- -->
    <div class="flex justify-end gap-4 mt-8">
       <a href="/users/home" class="bg-gray-500 text-white px-5 py-2 rounded hover:bg-gray-600">Kembali</a>
      <a href="/pesanan/<%= transaksi.transaction_id %>/cetak"
         class="bg-red-600 text-white px-5 py-2 rounded hover:bg-red-700">
        Cetak Bukti
      </a>
    </div>

     <!-- (Tombol Riwayat Transaksi) -->
    <div class="w-1/3 pl-4 flex flex-col justify-start items-start">
      <a href="/history" class="text-blue-500 hover:text-blue-700 font-medium mt-6">
        Riwayat Transaksi
      </a>
    </div>

  </main>

<!--FOOTER-->
  <footer class="bg-green-600 text-white p-4 mt-8 fixed bottom-0 w-full text-center">
    <p>Â© 2025 SIRASO BC - Universitas Andalas</p>
  </footer>

</body>
</html>
