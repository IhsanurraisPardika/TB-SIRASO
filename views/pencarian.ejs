<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Halaman Pencarian</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-800 min-h-screen">

  <!-- Header + Search + Tabs -->
  <%- include('partials/headersearch') %>

  <!-- Konten Utama -->
  <main class="flex flex-col items-center justify-center text-center mt-20">
  <!-- Ikon Search SVG -->
  <svg xmlns="http://www.w3.org/2000/svg" class="w-24 h-24 text-gray-400 opacity-50 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
    <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-4.35-4.35m0 0A7.5 7.5 0 104.5 4.5a7.5 7.5 0 0012.15 12.15z" />
  </svg>

  <p class="text-gray-500 text-lg font-medium">Temukan Makananmu!</p>
</main>


  <!-- Script Fokus & Pencarian -->
  <script>
    // Fokus otomatis ke kolom input pencarian saat halaman dimuat
    window.onload = function() {
      const input = document.querySelector('input[type="text"]');
      if (input) input.focus();

      // Deteksi tombol enter
      input.addEventListener('keypress', function (e) {
        if (e.key === 'Enter') {
          e.preventDefault();
          const keyword = input.value.trim();
          if (keyword !== '') {
            window.location.href = `/pencarian?keyword=${encodeURIComponent(keyword)}`;
          }
        }
      });
    };
  </script>

</body>
</html>
